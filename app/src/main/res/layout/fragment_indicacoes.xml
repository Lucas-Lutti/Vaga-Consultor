<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/editTextNomeAmigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome do Amigo" />

        <EditText
            android:id="@+id/editTextTelefoneAmigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone do Amigo"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editTextEmailAmigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail do Amigo"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editTextObservacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Observações"
            android:inputType="textMultiLine" />


        <Button
            android:id="@+id/buttonEnviarIndicacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar Indicação" />
    </LinearLayout>
</ScrollView>
